{
  "name": "modern-admin-styler-v2-tests",
  "version": "2.2.0",
  "description": "ðŸŽ¨ Modern Admin Styler V2 - Comprehensive Test Suite",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:playwright": "playwright test",
    "test:playwright:headed": "playwright test --headed",
    "test:playwright:debug": "playwright test --debug",
    "test:playwright:ui": "playwright test --ui",
    "test:php": "phpunit",
    "test:php:coverage": "phpunit --coverage-html tests/coverage/html",
    "install": "playwright install",
    "lint": "eslint assets/js/**/*.js tests/js/**/*.js",
    "lint:fix": "eslint assets/js/**/*.js tests/js/**/*.js --fix",
    "format": "prettier --write \"assets/js/**/*.js\" \"tests/js/**/*.js\" \"docs/**/*.md\"",
    "format:check": "prettier --check \"assets/js/**/*.js\" \"tests/js/**/*.js\" \"docs/**/*.md\"",
    "ci": "npm run lint && npm run format:check && npm run test && npm run test:playwright"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.50.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-promise": "^6.1.0",
    "prettier": "^3.0.0",
    "@testing-library/jest-dom": "^6.1.0",
    "fetch-mock": "^9.11.0"
  },
  "eslintConfig": {
    "extends": ["standard"],
    "env": {
      "browser": true,
      "jest": true,
      "jquery": true
    },
    "globals": {
      "wp": "readonly",
      "wpApiSettings": "readonly",
      "ajaxurl": "readonly",
      "masV2Data": "readonly"
    }
  },
  "author": "MAS Team",
  "license": "GPL-2.0"
} 